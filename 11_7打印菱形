#include<iostream>
using namespace std;
int main()
{
	int n=3;
	for(int i=n;i>0;i--)
	{
		for(int j=0;j<i-1;j++)
		{
			cout<<" ";
		}
		
		for(int j=n-i;j<3*(n-i)+1;j++)
		{		
		 	cout<<"*";	
		}
		cout<<endl;
	}
	for(int i=n-1;i>0;i--)
	{
		for(int j=n;j>i;j--)
		{
			cout<<" ";
		}
		for(int j=i-1;j<3*i-2;j++)
		{		
			cout<<"*";
		}
		cout<<endl;
		
	}
	
	return 0;
}
