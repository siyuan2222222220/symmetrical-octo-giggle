//打印菱形
#include<stdio.h>
int main()
{
	int n;
	scanf("%d",&n);
	int i=0; 
	for(i=0;i<n;i++)
	{
		int j=0;
		for(j=0;j<n-1-i;j++)
		{
			printf(" ");	
		} 
		int k=0;
		for(k=0;k<2*i+1;k++)
		{
			printf("*");	
		}
		printf("\n");
	}
	for(i=n-1;i>=0;i--)
	{
		int j=0;
		for(j=0;j<n-i;j++)
		{
			printf(" ");	
		} 
		int k=0;
		for(k=2*i-1;k>=1;k--)
		{
			printf("*");	
		}
		printf("\n");
	}
	return 0;
 } 
