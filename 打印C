//用*输出字母c的图案
#include<stdio.h>
#include<math.h>
int main()
{
	int n;
	scanf("%d",&n);
	int i=0;
	for(i=1;i<n/2+1;i++)
	{
		int j=0;
		for(j=0;j<=n/2-i;j++)
		{
			printf("  ");
		}
		printf("*\n");
	} 
	for(i=1;i<n/2;i++)
	{
		int j=0;
		for(j=0;j<=i;j++)
		{
			printf("  ");
		}
		printf("*\n");
	}
	return 0;
} 
