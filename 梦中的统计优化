#include<stdio.h>
int main()
{
	int n;
	scanf("%d",&n);
	double a[5005];
	int t[5005];
	int i=0;
	for(i=0;i<n;i++)
	{
		scanf("%lf%d",&a[i],&t[i]);
		
	}
	for(i=0;i<n;i++)
	{
		int j=0;
			int k=0;
			for(k=(int)a[i];k<(int)a[i]*t[i];k+=(int)a[i]*j)
			{
				j++;
				//状态变化就对了
				//1变0,0变1
				 
			}
	}
}
