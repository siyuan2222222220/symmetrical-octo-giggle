//输入一个正整数，求各位数的和
#include<stdio.h>
int main()
{
	int n1=0,n2=0,n3=0,n4=0,n5=0,n6=0,n7=0,n8=0,n9=0,n10=0,n11=0,n12=0;
	printf("输入一个正整数，以回车结束：");
	int total=scanf("%1d%1d%1d%1d%1d%1d%1d%1d%1d%1d%1d%1d",&n1,&n2,&n3,&n4,&n5,&n6,&n7,&n8,&n9,&n10,&n11,&n12);
	int sum=n1+n2+n3+n4+n5+n6+n7+n8+n9+n10+n11+n12;
	printf("一共有%d位，和为%d\n",total,sum);
	return 0; 
 } 
