#include <stdio.h>
int a, b, f;
char c;
int main(){
	//画矩形优化三目运算符 
	scanf("%d %d %c %d", &a, &b, &c, &f);
	int i=0; 
	for (i = 0; i < a; i++)
	{
		int j=0;
		for (j = 0; j < b; j++)
		{
			if (i != 0 && i != a - 1 && j != 0 && j != b - 1)
				printf("%c", f == 0?' ':c); 
			else printf("%c", c);
		}
		printf("\n");
	}
	return 0;
}
