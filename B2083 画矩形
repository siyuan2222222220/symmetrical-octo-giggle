#include<stdio.h>
int main()
{
	//B2083 画矩形
	char c;
	int a,b,f;
	scanf("%d%d",&a,&b);
	getchar();
	scanf("%c%d",&c,&f);
	if(f==0)
	{
		int i=0;
		for(i=0;i<a;i++)
		{
			printf("%c",c);
			if(i==0||i==a-1)
			{ 
				int j=0;
				for(j=0;j<b-2;j++) 
				printf("%c",c);
			}
			else
			{
				int j=0;
				for(j=0;j<b-2;j++)
				{
					printf(" ");
				}
			}
			printf("%c",c);
			printf("\n");
		}
	}
	if(f!=0)
	{
		int i=0;
		for(i=0;i<a;i++)
		{
			int j=0;
			for(j=0;j<b;j++)
			{
				printf("%c",c);
			}
			printf("\n");
		}
	}
	return 0;
}
